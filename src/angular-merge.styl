
.mergely-wrapper
  display flex
  flex-direction column
  min-width 450px

  #mergely-editor
    flex 1
    display flex
    position relative

    #mergely-editor-editor-lhs
    #mergely-editor-editor-rhs
      flex 1
  /* Fixes setting the height on the mergely-column class */
  .mergely-column
    position relative

    .CodeMirror
      position absolute
      width 100%
      height 100%

  /* Some sensible layout defaults */
  .merge-bar
    display flex
    flex-direction row
    justify-content space-between

    &> *
      flex-grow 1

  .merge-bottom-bar
    clear both

  .merge-btn-container
    display flex
    flex-direction row-reverse
    align-items center

    .merge-btn
      flex-grow 0
      flex-shrink 0